
html {
	width: 98%;
	height: 98%;
}
/*-- General --*/
.clear {
    clear: both;
}

/*-- Body --*/
body{
	width: 100%;
	height: 100%;
}

#left{
	float: left;
	height: 100%;
	width: 18%;
	border-right: medium solid #3B5998;
}

#right{
	float: left;
	width: 79%;
	margin-left: 1%;
}

/*---Home Vertical Menu CSS ---*/  
ul.svertical{
	width: 300px; /* width of menu */
	overflow: auto;
	background: gainsboro; /* background of menu */
	margin: 0;
	padding: 0;
	padding-top: 7px; /* top padding */
	list-style-type: none;
	height: 100%;
}

ul.svertical li{
	text-align: left; /* right align menu links */
}

ul.svertical li a{
	position: relative;
	display: inline-block;
	text-indent: 5px;
	overflow: hidden;
	background: none repeat scroll 0 0 #3B5998; /* initial background color of links */
	font: bold 16px lucida grande;
	text-decoration: none;
	padding: 5px;
	margin-bottom: 7px; /* spacing between links */
	color: white;
	-moz-box-shadow: inset 7px 0 5px gainsboro; /* inner left shadow added to each link */
	-webkit-box-shadow: inset 7px 0 5px gainsboro;
	box-shadow: 7px 0 5px gainsboro inset;
	-moz-transition: all 0.2s ease-in-out; /* CSS3 transition of hover properties */
	-webkit-transition: all 0.2s ease-in-out;
	-o-transition: all 0.2s ease-in-out;
	-ms-transition: all 0.2s ease-in-out;
	transition: all 0.2s ease-in-out;
}

ul.svertical li a:hover{
	padding-left: 15px; /* add left padding to expand link horizontally to the right */
	color: black;
	background: white;
	-moz-box-shadow: 9px 0 5px gainsboro inset; /* contract inner left shadow */
	-webkit-box-shadow: 9px 0 5px gainsboro inset;
	box-shadow: 9px 0 5px gainsboro inset;
}

/*-- Expandable List --*/
#menu {
    list-style: none;
    padding: 0;
    margin: 0;
}

#listContainer{
  margin-top:15px;
}

#expList ul, li {
    list-style: none;
    margin:0;
    padding:0;
    cursor: pointer;
}
#expList p {
    margin:0;
    display:block;
}
#expList p:hover {
    background-color:#121212;
}
#expList li {
    line-height:140%;
    text-indent:0px;
    background-position: 1px 8px;
    padding-left: 20px;
    background-repeat: no-repeat;
}

#expList .collapsed {
    background-image: url(../img/collapsed.png);
}

#expList .expanded {
    background-image: url(../img/expanded.png);
}
#expList {
    clear: both;
}

#listControl{
  margin-bottom: 15px;
  display: none;
}
#listControl a {
    border: 1px solid #555555;
    color: #555555;
    cursor: pointer;
    height: 1.5em;
    line-height: 1.5em;
    margin-right: 5px;
    padding: 4px 10px;
}
#listControl a:hover {
    background-color:#555555;
    color:#222222; 
    font-weight:normal;
}


